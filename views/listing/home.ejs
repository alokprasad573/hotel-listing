<% layout('/layouts/boilerplate') %>

<body>

<header class="container text-center mt-5">
    <h1>Welcome to Endless Horizons</h1>
    <p class="lead">Find the best hotels at amazing locations.</p>
</header>

<section class="container mt-4">
    <div class="row row-cols-lg-2 row-cols-md-2 row-cols-sm-1">
        <% hotels.forEach(hotel => { %>
            <a href="#" class="btn ">
                <div class="card col">
                    <img src="<%= hotel.image %>" class="card-img-top z-0" alt="<%= hotel.HotelType %>"
                         style="height: 20rem; width: 20rem">
                    <div class="card-img-overlay"></div>
                    <div class="card-body mt-1">
                        <h5 class="card-title text-capitalize"><b><%= hotel.HotelType %></b></h5>
                        <p class="card-text"><%= hotel.description %></p>
                    </div>
                </div>
            </a>
        <% }); %>
    </div>
</section>

</body>